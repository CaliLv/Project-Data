        </com.design.appproject.widget.MyFlexBoxLayout>
        <com.design.appproject.widget.MyFrameLayout
            style="@style/index_recommend_title_box_style">
            <com.design.appproject.widget.MyTextView
                style="@style/index_recommend_title_text_style"
                android:text="Food sharing recommendations"/>
        </com.design.appproject.widget.MyFrameLayout>

                <com.design.appproject.widget.MyFlexBoxLayout
                    app:flexWrap="wrap"
                        android:visibility="gone"
                        style="@style/index_recommend_idea_box_style">
