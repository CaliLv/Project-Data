                        android:id="@+id/banner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
              </com.design.appproject.widget.MyFrameLayout>
                <com.design.appproject.widget.MyFlexBoxLayout
                    android:id="@+id/menu_gl"
                    style="@style/index_menu_box_style"/>
        <com.design.appproject.widget.MyFlexBoxLayout
            app:flexWrap="wrap"
            style="@style/index_recommend_box_box_style">
        <com.design.appproject.widget.MyFlexBoxLayout
                app:flexWrap="wrap"
            android:visibility="gone"
            style="@style/index_recommend_idea_box_style">
