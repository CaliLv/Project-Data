    <com.design.appproject.widget.CommonTitleBarView
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/navigation_backgroundColor"
        app:common_leftVisible="false"
        app:common_title="Home"
        app:common_titleColor="@color/navigation_color" />
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/home_srl"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
